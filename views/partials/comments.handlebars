<div class="comments">
  <hr>
<h3 class="text-center text-dark">Comments</h3>
  {{#each this}}
  <div class ="container text-dark">
<div class="row">
<div class="col-12">
  <section class="comment card bg-light mb-3">
    <div class="meta">
      {{post.user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  </div>
  </div>
  </div>
  {{/each}}
</div>