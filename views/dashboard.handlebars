<section>
  <h3 class="text-dark">Create New Post</h3>
  <hr>

  <form class="new-post-form">
    <div class="mb-3">
      <label for="post-title">Title</label>
      <input type="text" class= "form-control" id="post-title" name="post-title" />
    </div>
    <div class="mb-3">
      <label for="post-body">Body</label>
      <input type="text" class= "form-control input-large" id="post-body" name="post-body" />
    </div>
    <button type="submit" class="btn btn-dark">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <hr><h3 class="text-center">Your Posts</h3><hr>

    {{#each posts as |post|}}

      {{> post-info post}}
      <div class ="container">
<div class="row float-right">
<div class="col-12">
<div class="card" style="width: 8rem;">
      <a href="/dashboard/edit/{{post.id}}" class="text-center card-text text-light bg-danger edit-link">Edit post</a>

</div>
</div>
</div>
</div>
<br>
<br>
    {{/each}}

</section>
{{/if}}
<br>

<script src="/javascript/add-post.js"></script>