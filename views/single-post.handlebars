<div class="post">
    <article class="card">
        <div class="card-header bg-dark text-light flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{user.username}} on {{format_date created_at}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>
    


    {{#if post.Comments}}
    <section class="card comments">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div class='card-comments'>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{user.username}}, {{format_date created_at}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

{{#if loggedIn}}
    <form id="new-comment-form" class="card">
        <div class="card-header bg-dark text-light">
            <h5>Add New Comment</h5>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body" class= "text-dark">Comment</label>
            <div>
                <textarea name="comment-body" class="form-input"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}